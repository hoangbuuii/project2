<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: Settings.gravatar_smaller_size), comment.user %>
  <big><span class="user"><%= link_to comment.user.name, comment.user %></span></big>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    Commented <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user? comment.user %>
      <%= link_to t("delete"), comment, method: :delete, data: { confirm: t("you_sure") } %>
    <% end %> 
  </span>
</li>
