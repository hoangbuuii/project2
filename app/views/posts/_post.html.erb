<li id="post-<%= post.id %>">
  <div class="row">
   <div class="col-sm-3">
    <%= link_to gravatar_for(post.user, size: Settings.gravatar_big_size ), post.user %> 
  </div>
  <div class="col-sm-9">
    <div class="well">
      <p><%= link_to post.user.name, post.user %> <%= t("posted") %>:</p>
      <h2><%= link_to post.title, post %></h2>
      <p><%= post.content %></p>
      <span class="timestamp">
        <%= t("posted") %> <%= time_ago_in_words(post.created_at) %> <%= t("ago") %>.
        <% if current_user? post.user %>
        <%= link_to t("delete"), post, method: :delete, data: {confirm: t("you_sure")} %>
        <% end %>
      </span>

      <span class="timestamp">
        <p><%= t("tag") %>: <%= raw tag_links(post.all_tags) %></p>
      </span>
    </div>
  </div>
</div>
</li>
