<% provide :title, t("compose_new_post") %>
<h1><%= t "compose_new_post" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %></h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :post_title, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content, id: :post_content, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.text_field :all_tags, placeholder: t("tags"), class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit t("compose_new_post"), class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>