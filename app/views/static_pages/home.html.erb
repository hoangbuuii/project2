<% provide :title, t("home") %>

<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="search_post">
        <%= render "shared/search_post" %>
      </section>
      <%= link_to "New Post", new_post_path %>
    </aside>
     <div class="col-md-8">
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    </div>
  </div>
<% else %>
  <div class="row">
    <aside class="col-md-4">
      <h1><%= t "project_2" %></h1>
      <h2><%= t "title" %></h2>
    </aside>
      <div class="col-md-8">
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    </div>
  </div>
<% end %>
