<%= form_tag(posts_path, :method => "get") do %>
  <div class="form-group input-group">
    <%= text_field_tag :search, params[:search], placeholder: t("search_post"),
      class: "form-control" %>
    <span class="input-group-btn">
      <%= submit_tag t("search"), class: "btn btn-default" %>
    </span>
  </div>
<% end %>
